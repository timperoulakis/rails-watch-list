<div class="banner" style="background-image: url(<%= asset_url("banner.jpg") %>);">
  <div class="container text-center">
    <h1>popcorn</h1>
  </div>
</div>
<div class="container py-3">
  <div class="cards">
    <% @lists.each do |list| %>
      <%= link_to list_path(list) do %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.image %>)">
          <%= list.name %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
