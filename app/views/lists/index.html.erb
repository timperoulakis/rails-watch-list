<div class="banner"></div>
<div class="container pt-3">
  <div class="cards">
    <% @lists.each do |list| %>
      <%= link_to list_path(list) do %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.image %>)">
          <%= list.name %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
